---
import BaseLayout from "./BaseLayout.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="container">
    <header class="py-1">
      <slot name="header" />
    </header>
    <main class="flow">
      <slot name="main" />
    </main>
    <footer class="py-1">
      <slot name="footer" />
    </footer>
  </div>
</BaseLayout>

<style>
  main {
    --flow-gap: var(--gap-1);
  }

  header {
    height: 100vh;
    height: 100lvh;
  }

  @media screen and (min-width: 51em) {
    .container {
      display: grid;
      grid-template-columns: 3fr 4fr;
      gap: 0.5rem;
    }

    header {
      position: sticky;
      top: 0;
      grid-row: 1 / 3;
    }

    main {
      padding-block: var(--gap-1);
    }

    footer {
      padding-block-start: 0;
    }
  }

  @media screen and (min-width: 64em) {
    .container {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
