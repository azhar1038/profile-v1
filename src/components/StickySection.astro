---
interface Props {
  sectionTitle: string;
  id: string;
  class?: string;
}

const { sectionTitle, id, class: className, ...rest } = Astro.props;
---

<section id={id} class={className} {...rest}>
  <h2>{sectionTitle}</h2>
  <div>
    <slot />
  </div>
</section>

<style>
  h2 {
    position: sticky;
    background-color: palegoldenrod;
    top: 0;
  }

  div {
    padding-inline: 1.5rem;
  }

  @media screen and (min-width: 64em) {
    h2 {
      display: none;
    }

    div {
      padding-inline: 0;
    }
  }
</style>
