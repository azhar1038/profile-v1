---
import Chip from "./Chip.astro";
interface Props {
  list?: string[];
}

const { list } = Astro.props;
---

<div class="card | flow">
  <div class="lead">
    <slot name="lead" />
  </div>
  <h3>
    <slot name="header" />
  </h3>
  <slot name="body" />
  {
    list ? (
      <ul class="plain-list flex flex-wrap">
        {list.map((item) => (
          <li>
            <Chip data={item} />
          </li>
        ))}
      </ul>
    ) : null
  }
</div>

<style>
  .card {
    --flow-size: var(--gap-3);

    display: grid;
    /* padding-block: 2rem; */
  }

  h3 {
    margin-block-start: 0;
  }

  .lead {
    padding-block-start: 1rem;
  }

  h3 {
    color: var(--text2);
  }

  ul {
    margin-block-end: 0;
  }

  @media screen and (min-width: 40em) {
    .card {
      grid-template-columns: 8rem 1fr;
    }

    .lead {
      grid-row: 1 / 4;
      padding-inline-end: 1em;
      padding-block: 0;
    }
  }
</style>
