---
import { Image } from "astro:assets";
import IndexCard from "./IndexCard.astro";
import AnimatedLink from "./AnimatedLink.astro";
export interface Props {
  name: string;
  image: ImageMetadata;
  link: string;
  skills: string[];
}

const { name, image, link, skills } = Astro.props;
---

<IndexCard list={skills}>
  <span slot="lead">
    <Image src={image} alt={`Image for project ${name}`} class="image" />
  </span>
  <AnimatedLink href={link} class="interactable" slot="header">
    {name}
  </AnimatedLink>
  <slot slot="body" />
</IndexCard>

<style>
  .image {
    object-fit: cover;
    max-height: 16rem;
    margin-block-end: var(--gap-3);
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  @media screen and (min-width: 40em) {
    .image {
      height: auto;
    }
  }
</style>
